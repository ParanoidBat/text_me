<h2 class="ui center aligned medium icon header">
  <i class="circular pink mars double icon"></i>
  Why are you GEH?
</h2>

<!-- feed -->
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <!-- show messages -->
          <% if @messages.any? %>
            <%= render @messages %>
          <% end %>
          
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |form|%>
          <div class="field">
            <div class="ui fluid icon input">
              <%= form.text_field :body %>
              <%= form.button '<i class="bordered inverted red edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- vertical menu -->
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>