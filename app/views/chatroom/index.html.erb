<h2 class="ui center aligned medium icon header">
  <i class="circular pink mars double icon"></i>
  Why are you GEH?
</h2>

<!-- feed -->
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <!-- show messages -->
          <% if @messages.any? %>
            <% @messages.each do |message|%>
              <div class="event">
                <div class="content">
                  <div class="summary">
                    <em><%= message.user.username %>:</em> <%= message.body %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
          
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="You are geh">
              <i class="bordered inverted red edit icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- vertical menu -->
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>