<h2 class="ui center aligned header">Welcome to TextMe - <i>a no homo chat app</i></h2>

<h2 class="ui center aligned medium icon header">
  <i class="circular red sign in icon"></i>
  Sign Up
</h2>

<div class="ui placeholder segment">
  <div class="ui one column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:user, html: {class: "ui form", role: "form"}, url: signup_path) do |form|%>
        <div class="field">
          <%= form.label :username, "Username" %>
          <div class="ui left icon input">
            <%= form.text_field :username %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.label :password, "Password" %>
          <div class="ui left icon input">
            <%= form.password_field :password%>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.button "Sign Up", class: "ui red submit button" %>
      <% end %>
    </div>